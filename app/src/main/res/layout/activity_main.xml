<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888"
    tools:context=".MainActivity">

    <com.kongqw.view.CustomCornerView
        android:id="@+id/custom_corner_view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cornerDirection="top"
        app:cornerRadius="30dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/custom_corner_view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <WebView
            android:id="@+id/web_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.kongqw.view.CustomCornerView>

    <com.kongqw.view.CustomCornerView
        android:id="@+id/custom_corner_view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cornerDirection="bottom"
        app:cornerRadius="30dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/custom_corner_view1"
        app:layout_constraintTop_toTopOf="parent">

        <WebView
            android:id="@+id/web_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.kongqw.view.CustomCornerView>

    <com.kongqw.view.CustomCornerView
        android:id="@+id/custom_corner_view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cornerDirection="left"
        app:cornerRadius="20dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/custom_corner_view4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_corner_view1">

        <WebView
            android:id="@+id/web_view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.kongqw.view.CustomCornerView>

    <com.kongqw.view.CustomCornerView
        android:id="@+id/custom_corner_view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cornerDirection="right"
        app:cornerRadius="20dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/custom_corner_view3"
        app:layout_constraintTop_toBottomOf="@id/custom_corner_view2">

        <WebView
            android:id="@+id/web_view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.kongqw.view.CustomCornerView>


    <com.kongqw.view.CustomCornerView
        android:id="@+id/custom_corner_view5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cornerDirection="all"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/custom_corner_view4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_corner_view3">

        <WebView
            android:id="@+id/web_view5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.kongqw.view.CustomCornerView>

</androidx.constraintlayout.widget.ConstraintLayout>